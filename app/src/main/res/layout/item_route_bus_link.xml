<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/linkIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Связь #1"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/linkStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_active"
                android:text="АКТИВНА"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>
        </LinearLayout>

        <!-- ID маршрута -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID маршрута:"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/linkRouteIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ID автобуса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID автобуса:"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/linkBusIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ID водителя -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID водителя:"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/linkDriverIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Заметки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заметки:"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/linkNotesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Основной рейс утром"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>