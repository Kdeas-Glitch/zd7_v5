<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/red_state"
        motion:constraintSetEnd="@+id/green_state"
        motion:duration="300">
        <OnClick
            motion:targetId="@id/btn_next"
            motion:clickAction="transitionToEnd" />
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="right" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/green_state"
        motion:constraintSetEnd="@+id/red_state"
        motion:duration="300">
        <OnClick
            motion:targetId="@id/btn_prev"
            motion:clickAction="transitionToEnd" />
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="left" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/green_state"
        motion:constraintSetEnd="@+id/blue_state"
        motion:duration="300">
        <OnClick
            motion:targetId="@id/btn_next"
            motion:clickAction="transitionToEnd" />
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="right" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/blue_state"
        motion:constraintSetEnd="@+id/green_state"
        motion:duration="300">
        <OnClick
            motion:targetId="@id/btn_prev"
            motion:clickAction="transitionToEnd" />
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="left" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/blue_state"
        motion:constraintSetEnd="@+id/red_state"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="right" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/red_state"
        motion:constraintSetEnd="@+id/blue_state"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/motionLayout"
            motion:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/red_state">
        <Constraint
            android:id="@+id/red_item"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/green_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/blue_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/green_state">
        <Constraint
            android:id="@+id/red_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/green_item"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/blue_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/blue_state">
        <Constraint
            android:id="@+id/red_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/green_item"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/blue_item"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>